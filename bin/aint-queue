 * This source file is subject to the MIT license that is bundled.
 */

if (file_exists(__DIR__ . '/../../../autoload.php')) {
    require_once __DIR__ . '/../../../autoload.php';
} elseif (file_exists(__DIR__ . '/../autoload.php')) {
    require_once __DIR__ . '/../autoload.php';
} else {
    require_once __DIR__ . '/../vendor/autoload.php';
}

use Symfony\Component\Console\Application;
use Littlesqx\AintQueue\Console\QueueRunCommand;
use Littlesqx\AintQueue\Console\QueueListenCommand;
use Littlesqx\AintQueue\Console\QueueStatusCommand;
use Littlesqx\AintQueue\Console\QueueClearCommand;
use Littlesqx\AintQueue\Console\WorkerStopCommand;
use Littlesqx\AintQueue\Console\WorkerReloadCommand;
use Littlesqx\AintQueue\Console\QueueReloadFailedCommand;

$app = new Application();

$app->addCommands([
    new QueueRunCommand(),
    new QueueListenCommand(),
    new QueueStatusCommand(),
    new QueueClearCommand(),
    new WorkerStopCommand(),
    new WorkerReloadCommand(),
    new QueueReloadFailedCommand(),
]);

$app->run();